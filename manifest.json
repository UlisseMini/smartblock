{
  "manifest_version": 3,
  "name": "Intelligent Website Blocker",
  "version": "1.0",
  "description": "Blocks websites intelligently based on content analysis",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}

